@inherits LayoutComponentBase

@* Required *@
@{
    var isDarkMode = true;
<MudThemeProvider @bind-IsDarkMode="@isDarkMode" />
}
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CascadingAuthenticationState>
        <Header DarkThemeState="@DarkThemeState"
                UserCulture="@CurrentCulture"
                OnThemeStateChange="@(state => HandleThemeStateChange(state, true))"
                OnUserCultureChange="@(culture => HandleUserCultureChange(culture, true))"></Header>
        <MudMainContent>
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <RedirectToLogin/>
                    @Body
                </NotAuthorized>
            </AuthorizeView>
        </MudMainContent>
    </CascadingAuthenticationState>
</MudLayout>