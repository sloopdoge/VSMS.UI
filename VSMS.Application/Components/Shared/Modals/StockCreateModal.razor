<EditForm EditContext="@_editContext"
          OnValidSubmit="HandleCreateStock">
    <MudDialog Class="stock-create-modal-container"
               Gutters="true"
               ActionsClass="justify-space-between align-center pl-6 pr-6 pb-3"
               ContentClass="stock-create-modal-content">
        <TitleContent>
            <MudText Color="@Color.Primary"
                     GutterBottom="true"
                     Typo="@Typo.h4">
                @Localizer["stock_add_modal_title"]
            </MudText>
        </TitleContent>
        <DialogContent>
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="@CreateModel.Symbol"
                          For="@(() => CreateModel.Symbol)"
                          InputMode="@InputMode.text"
                          InputType="@InputType.Text"
                          Label="@Localizer["stock_add_modal_field_label_symbol"]"
                          Margin="@Margin.Dense"
                          T="string"
                          Variant="@Variant.Outlined" 
                          Class="mb-3"/>

            <MudTextField @bind-Value="@CreateModel.Title"
                          For="@(() => CreateModel.Title)"
                          InputMode="@InputMode.text"
                          InputType="@InputType.Text"
                          Label="@Localizer["stock_add_modal_field_label_name"]"
                          Margin="@Margin.Dense"
                          T="string"
                          Variant="@Variant.Outlined" 
                          Class="mb-3"/>

            <MudNumericField @bind-Value="@CreateModel.Price"
                             For="@(() => CreateModel.Price)"
                             Label="@Localizer["stock_add_modal_field_label_price"]"
                             Margin="@Margin.Dense"
                             Variant="@Variant.Outlined" 
                             HideSpinButtons="true"/>
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="@ButtonType.Button"
                       Color="@Color.Warning"
                       Variant="@Variant.Filled"
                       OnClick="@(MudDialog.Cancel)">
                @Localizer["stock_add_modal_action_cancel"]
            </MudButton>
            <MudButton ButtonType="@ButtonType.Submit"
                       Color="@Color.Tertiary"
                       Variant="@Variant.Filled">
                @Localizer["stock_add_modal_action_add"]
            </MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>